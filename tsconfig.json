{
	"compilerOptions": {
		"strict": true,
		"composite": true,
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "./dist",
		"incremental": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"lib": [
			"ES6",
			"esnext"
		],
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modues",
		"dist/"
	]
}
